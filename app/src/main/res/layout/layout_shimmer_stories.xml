<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/ivStoryImage"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:background="@color/gray3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/tvUsername"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivStoryImage"
                    app:layout_constraintWidth_percent="0.5" />

                <View
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvUsername"
                    app:layout_constraintWidth_percent="0.3" />

                <View
                    android:id="@+id/tvDescription"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintEnd_toEndOf="@id/tvDate"
                    app:layout_constraintStart_toStartOf="@id/tvUsername"
                    app:layout_constraintTop_toBottomOf="@id/tvUsername" />

                <View
                    android:id="@+id/tvDescription2"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvUsername"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    app:layout_constraintWidth_percent="0.8" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/ivStoryImage2"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:background="@color/gray3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/tvUsername2"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivStoryImage2"
                    app:layout_constraintWidth_percent="0.5" />

                <View
                    android:id="@+id/tvDate2"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvUsername2"
                    app:layout_constraintWidth_percent="0.3" />

                <View
                    android:id="@+id/tvDescription3"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintEnd_toEndOf="@id/tvDate2"
                    app:layout_constraintStart_toStartOf="@id/tvUsername2"
                    app:layout_constraintTop_toBottomOf="@id/tvUsername2" />

                <View
                    android:id="@+id/tvDescription4"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvUsername2"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription3"
                    app:layout_constraintWidth_percent="0.8" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/ivStoryImage3"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:background="@color/gray3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/tvUsername3"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivStoryImage3"
                    app:layout_constraintWidth_percent="0.5" />

                <View
                    android:id="@+id/tvDate3"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvUsername3"
                    app:layout_constraintWidth_percent="0.3" />

                <View
                    android:id="@+id/tvDescription5"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintEnd_toEndOf="@id/tvDate3"
                    app:layout_constraintStart_toStartOf="@id/tvUsername3"
                    app:layout_constraintTop_toBottomOf="@id/tvUsername3" />

                <View
                    android:id="@+id/tvDescription6"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvUsername3"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription5"
                    app:layout_constraintWidth_percent="0.8" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>